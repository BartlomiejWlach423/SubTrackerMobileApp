<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:columnCount="3"
        android:rowCount="1"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/nameCustomListView"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/name_custom_listview"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="@string/ac_name_information"
            />

        <TextView
            android:id="@+id/costCustomListView"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/cost_custom_listview"
            android:textSize="15sp"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/ac_cost_information"

            />

        <TextView
            android:id="@+id/paymentCustomListView"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/payment_custom_listview"
            android:textSize="13sp"
            android:layout_marginTop="11dp"
            android:contentDescription="@string/ac_payment_information"
            android:textAlignment="viewEnd"
            />

    </GridLayout>

</androidx.cardview.widget.CardView>